    <meta name="msapplication-TileImage" content="/ms-icon-144x144.png">
    <meta name="theme-color" content="#ffffff">
    <style>
        .overlay {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100%;
  width: 100%;
  opacity: 1;
  transition: .3s ease;
}

/* When you mouse over the container, fade in the overlay icon*/

/* The icon inside the overlay is positioned in the middle vertically and horizontally */
.iconLeft {
  color: black;
  font-size: 60px;
  position: absolute;
  top: 50%;
  left: 0%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}
.iconRight{
  color: black;
  font-size: 60px;
  position: absolute;
  top: 50%;
  left: 100%;
  transform: translate(-50%, -50%);
  -ms-transform: translate(-50%, -50%);
  text-align: center;
}
    </style>
</head>
<body style="background-color:#222222">
    <div class="navbar navbar-inverse navbar-fixed-top" style="border-color:#222222">
        
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index", "Index")" id="loginLink" class="navbar-brand">
                    <img class="img-responsive" src="~/Images/Shared/LogoS.png" />
                </a>
                @*@Html.ActionLink("Immobiliare Ursinea", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })*@

            </div>
            <div class="navbar-collapse collapse">
