                    <li>@Html.ActionLink("Chi Siamo", "Index", "ChiSiamo")</li>
                    <li>@Html.ActionLink("Contatti", "Index", "Contatti")</li>
                </ul>
                @*<ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Login", "Login", "Login")</li>
                </ul>*@
            </div>
        
    </div>
    <div class="container-full" style="background-color:black">
        @RenderBody()
        <hr />
        <div class="container"> 
            <footer >
                <p style="color:whitesmoke;  right: 0;  bottom: 0;  left: 0;  padding: 1rem;
  text-align: center;">&copy; @DateTime.Now.Year - Designed By GP4L  (Gabriele Predellini)</p>
            </footer>
        </div>
    </div>


    <div class="modal fade" id="modalLoadingClienti" data-backdrop="static" tabindex="-1" role="dialog" aria-labelledby="accesdeniedModalLabel1">
